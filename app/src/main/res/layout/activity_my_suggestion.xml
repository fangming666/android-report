<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="334dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/shape_corner"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="50dp"
                android:text="意见反馈"
                android:textColor="@color/base_text_color"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDF1F3"></View>

            <EditText
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/base_textarea"
                android:enabled="true"
                android:gravity="top"
                android:hint="把您更好的建议写在这里"
                android:maxLines="10"
                android:minLines="8"
                android:paddingLeft="18dp"
                android:scrollbars="vertical"
                android:textColorHint="#B2B2B2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/editorFontCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_editor_detail"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/sp_17" />


        </LinearLayout>

        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_suggest" />
    </FrameLayout>


        <Button
            android:layout_width="343dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:text="提交"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_primary"
            android:id="@+id/suggestionSubmit"
            />


</LinearLayout>